<% if current_user != @user %>
  <div id="<%= "follow_form" + @user.id.to_s %>">
  <% if current_user.following?(@user) %>
    <%= render partial: 'unfollow', locals: { unfollow_user: @user } %>
  <% else %>
    <%= render partial: 'follow', locals: { follow_user: @user } %>
  <% end %>
  </div>
<% end %>
