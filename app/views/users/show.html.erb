<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<h2>
  <%= @user.biography %>
</h2>
<p></p>
<p></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3 
    col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <div class="table-responsive">
      <table class="table">
      
        <tbody>
          <tr>
            <th scope="row">email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row">location</th>
            <td><%= @user.location %></td>
          </tr>
          <tr>
            <th scope="row">birthday</th>
            <td><%= @user.birthday %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
