<h1>Edit User Profile</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    
    <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>
    
      <div class="form-group">
        <%= f.label :name, {class: "col-md-2 control-label"} %>
        <div class="col-md-6">
          <%= f.text_field :name, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, {class: "col-md-2 control-label"} %>
        <div class="col-md-6">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, {class: "col-md-2 control-label"} %>
        <div class="col-md-6">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", {class: "col-md-2 control-label"} %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :biography, {class: "col-md-2 control-label"} %>
        <div class="col-md-10">
          <%= f.text_field :biography %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :location, {class: "col-md-2 control-label"} %>
        <div class="col-md-10">
          <%= f.text_field :location %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :birthday, {class: "col-md-2 control-label"} %>
        <div class="col-md-10">
          <%= f.date_select :birthday, start_year: 1900, include_blank: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2 col-md-offset-2">
          <%= f.submit class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
<p></p>
