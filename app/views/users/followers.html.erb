<div class="row">
  <aside class="col-md-4">
    <%= render 'sidebar_user' %>
    <div class="btn-group-vertical" role="group">
      <%= link_to "Following Users", followings_user_path(@user),
        class: "btn btn-link btn-lg"%>
      <button type="button" class="btn btn-info btn-lg active">
        Followed Users
      </button>
    </div>
  </aside>
  <% if logged_in? %>
    <div class="col-md-8">
      <h3>Followed Users (<%= @relational_users.count %>)</h3>
      <% if @relational_users.any? %>
        <%= render 'relational_users' %>
      <% end %>
    </div>
  <% end %>
</div>
